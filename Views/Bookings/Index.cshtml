@model IEnumerable<Movie_Booking_MVC.Models.Booking>

@{
    ViewData["Title"] = "Index";
}

<h1>Bookings</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Book a Show</a>
</p>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.BookingReference)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShowTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Movie.TicketPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookingReference)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShowTime.ShowDate)  -  @Html.DisplayFor(modelItem => item.ShowTime.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Movie.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Movie.TicketPrice)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
